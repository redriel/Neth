<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardBackground"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#e1e1d0">

    <TextView
        android:id="@+id/walletAlias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="20sp" />

    <Button
        android:id="@+id/unlockButton"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/walletAlias"
        android:layout_alignParentStart="true"
        android:drawableStart="@drawable/closed_lock"/>

    <Button
        android:id="@+id/infoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/walletAlias"
        android:layout_toEndOf="@+id/unlockButton"
        android:text="@string/info"
        android:textSize="12sp"
        style="@style/Base.Widget.AppCompat.Button.Borderless" />

    <Button
        android:id="@+id/transactionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/walletAlias"
        android:layout_toEndOf="@+id/infoButton"
        android:text="@string/transaction"
        android:textSize="12sp"
        style="@style/Base.Widget.AppCompat.Button.Borderless" />

    <Button
        android:id="@+id/uploadDocumentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/walletAlias"
        android:layout_toEndOf="@+id/transactionButton"
        android:text="@string/upload"
        android:textSize="12sp"
        style="@style/Base.Widget.AppCompat.Button.Borderless" />

    <Button
        android:id="@+id/deleteButton"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/walletAlias"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/uploadDocumentButton"
        android:background="#ff6666"
        android:drawableStart="@drawable/trash_bin"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"/>

</RelativeLayout>